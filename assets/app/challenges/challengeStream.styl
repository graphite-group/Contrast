.allchallenges
  position absolute
  top 4rem
  left 0
  right 0
  bottom 2rem
  overflow hidden
  .challenge
    position absolute
    top 0
    left 0
    bottom 0
    right 0
    transform translateY(100%)
    font-size 0
    padding 1rem
    transition 1s ease-out
    //border 1px solid black
    &::before
      content ""
      display inline-block
      vertical-align middle
      height 100%
      width 0
    h1
      position absolute
      top 2rem
      left 0
      right 0
      text-align center
      font-size 2rem
      font-family myfont
      font-weight 100
      line-height 0.8
      small
        font-size 0.5em
        font-weight 400
        color textgrey
    &:first-child
      transform translateY(0)
    .half
      display inline-block
      width 50%
      padding-bottom 28.75%
      position relative
      vertical-align middle
      .block
        top 1rem
        left 1rem
        bottom 1rem
        right 1rem
        background lightgrey
        position absolute
        cursor pointer
        font-size 0
        text-align center
        transition 0.3s ease-out
        &:hover
          transform translateY(-1rem)
        &::before
          content ""
          display inline-block
          vertical-align middle
          height 100%
          width 0
        img
          display inline-block
          vertical-align middle
          max-width: 100%
          max-height 100%
      .block.liked
        &::after
          content ""
          position absolute
          top 50%
          left 50%
          width 4rem
          height 4rem
          display block
          margin-top -2rem
          margin-left -2rem
          border-radius 2rem
          background-image url('/images/plus.svg')
          background-size cover
          background-position center center
          opacity 0.8
          animation-name 'popIn'
          animation-duration 0.5s