header
  position fixed
  top 0
  left 0
  height 4rem
  width 100%
  border-bottom 1px solid rgba(0,0,0,0.1)
  background white
  background rgba(255,255,255,0.9)
  z-index 999
  h1
    font-size 2rem
    padding 1rem
    padding-left 1.8rem
    font-family myfont
    font-weight 100
  a
    text-decoration none
  .hamburger
    position absolute
    right 2rem
    top 1rem
    height 2rem
    width 2rem
    background url('http://cdn.css-tricks.com/wp-content/uploads/2012/10/threelines.png')
    background-size cover
    background-position center center
    font-size 0
    opacity 0.5
    transition 0.5s linear
    cursor pointer
    .dropdown
      display none
      position absolute
      top 2rem
      right 0
      width 10rem
      visibility hidden
      opacity 0
      transition 0.5s 0.5s linear
      border 1px solid rgba(0,0,0,0.1)
      a
        display block
        font-size 1rem
        font-family myfont
        padding 1rem
        color rgba(0,0,0,0.4)
        background white
        border-bottom 1px solid rgba(0,0,0,0.1)
        transition 0.5s linear
        &:last-child
          border-bottom none
        &:hover
            color black
    &:hover
      opacity 1
      .dropdown
        opacity 1
        display block
        transition 0.5s 0s linear
        visibility visible