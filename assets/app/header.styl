header
  position fixed
  top 0
  left 0
  height 4rem
  width 100%
  border-bottom 1px solid rgba(0,0,0,0.1)
  border-top 1px solid rgba(0,0,0,0.1)
  background white
  background rgba(255,255,255,0.9)
  z-index 999
  transition 1s ease-out
  transform-origin 50% 100%
  transform-style: preserve-3d;
  .message
    position absolute
    top -4rem
    height 4rem
    left 0
    right 0
    transform rotateX(90deg)
    transform-origin 50% 100%
    padding 2rem
    text-align center
    font-family myfont
    background white
    background rgba(255,255,255,0.9)
    transition 1s
  &.notification
    transition 0.5s ease-in
    transform rotateX(-90deg) translateY(4rem)
  h1
    font-size 2rem
    padding 1rem
    padding-left 1.8rem
    font-family myfont
    font-weight 100
  a
    text-decoration none
  .hamburger
    position absolute
    right 2rem
    top 1rem
    height 2rem
    width 2rem
    background url('http://cdn.css-tricks.com/wp-content/uploads/2012/10/threelines.png')
    background-size cover
    background-position center center
    font-size 0
    opacity 0.5
    transition 0.5s 1s linear
    cursor pointer
    .dropdown
      display none
      position absolute
      top 2rem
      right 0
      width 10rem
      visibility hidden
      opacity 0
      transition 0s 0.1s ease-in
      border 1px solid rgba(0,0,0,0.1)
      &::before
        content ""
        position absolute
        top -2rem
        height 2rem
        left 0
        width 100%
      a
        display block
        font-size 1rem
        font-family myfont
        padding 1rem
        color rgba(0,0,0,0.4)
        background white
        border-bottom 1px solid rgba(0,0,0,0.1)
        transition 0.5s 0 linear
        &:last-child
          border-bottom none
        &:hover
            color black
    &:hover
      transition 0.5s linear
      opacity 1
      .dropdown
        display block
        opacity 1
        display block
        transition 0.5s 0s linear
        visibility visible