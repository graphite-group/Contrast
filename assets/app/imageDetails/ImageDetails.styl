.ImageDetails
  position fixed
  display block
  background white
  box-shadow 0 0 2px rgba(0,0,0,0.2)
  border 1px solid rgba(0,0,0,0.3)
  transition 0.3s ease-out
  opacity: 0.1
  overflow auto
  text-align left
  font-size 0
  top 150%
  left 60px
  height 100%
  right 60px
  .quit
    position absolute
    right 0
    top 0
    width 2rem
    height 2rem
    background #C50B0B
    color white
    font-family myfont
    padding-top 0.5rem
    text-align center
    font-size 1rem
    z-index 999
    cursor pointer
  .image
    display inline-block
    width 70%
    height 100%
    background rgb(235,235,235)
    text-align center
    vertical-align top
    @media screen and (max-width: 48rem)
      width 100%
      height auto
    &::before
      content ""
      display inline-block
      width 0px
      height 100%
      vertical-align middle
    img
      opacity 0
      transform translateY(-10px)
      display inline-block
      vertical-align middle
      max-width 100%
      max-height 100%
      &.isactive
        transition 0.75s 0.5s ease-out
        opacity 1
        transform translateY(0)
  .meta
    display inline-block
    width 30%
    height 100%
    font-size 1rem
    vertical-align top
    @media screen and (max-width: 48rem)
      width 100%
      height auto
    a.user
      display inline-block
      opacity 0
      transform translateY(-10px)
      font-family myfont
      font-size 1rem
      margin 1rem 1rem 0.5rem
      padding-bottom 0.2rem
      border-bottom 1px solid white
      text-decoration none
      color myblue
      &::after
        content " posted"
        font-size 0.65em
        font-style italic
        color lightgrey
      &:hover
        transition none
        border-bottom 1px solid myblue
      &.isactive
        transition opacity 0.75s 0.8s ease-out, transform 0.75s 0.8s ease-out
        opacity 1
        transform translateY(0)
    h4
      opacity 0
      transform translateY(-10px)
      font-size 2rem
      font-family myfont
      font-weight 100
      padding 0rem 1rem
      line-height 1
      &.isactive
        transition 0.75s 1.1s ease-out
        opacity 1
        transform translateY(0)
    p
      opacity 0
      transform translateY(-10px)
      font-size 0.8rem
      color textgrey
      padding 0.2rem 1rem 1rem
      font-family myfont
      font-weight 300
      line-height 1.4
      &.isactive
        transition 0.75s 1.4s ease-out
        opacity 1
        transform translateY(0)
